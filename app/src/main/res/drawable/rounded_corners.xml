<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Button background color -->
    <solid android:color="@color/whiteKomyu" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional border -->
    <stroke
        android:width="4dp"
        android:color="@color/greenKomyu" />

    <!-- Optional padding inside -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
