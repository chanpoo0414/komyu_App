<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPage3"
    android:background="@color/white">

    <View
        android:id="@+id/ViewLogoHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/greenKomyu"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewLogo4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/komyu_header_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewLogoHeader"
        app:layout_constraintVertical_bias="0.0">

        <!-- Title -->
        <TextView
            android:id="@+id/CreateNewAccTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:text="Create a New Account"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <!-- Username Field -->
        <TextView
            android:id="@+id/dateOfBirthTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="14dp"
            android:text="Date of Birth"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="20sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDateBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDateBirth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_bg_withcorner"
                android:drawableEnd="@drawable/calendar_logo"
                android:drawablePadding="10dp"
                android:inputType="date"
                android:focusable="false"
                android:cursorVisible="false"
                android:textColor="@color/black"
                android:hint="MM/DD/YY"
                android:padding="6dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/sexTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:text="Sex"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="20sp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutSex"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:endIconMode="dropdown_menu"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/dropDownSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg_withcorner"
                android:hint="Sex"
                android:inputType="text"
                android:cursorVisible="false"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/AddressTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:text="Address"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="20sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_bg_withcorner"
                android:drawableStart="@drawable/address_icon"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:hint="Address..."
                android:textColor="@color/black"
                android:padding="6dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- login redirect -->
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/lightGreenKomyu"
        android:text="NEXT"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtHaveAnAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Already have an account?"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text=" LOGIN"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>