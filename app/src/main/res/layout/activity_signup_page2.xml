<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupPage2"
    android:background="@color/white">

    <View
        android:id="@+id/ViewLogoHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/greenKomyu"
        app:layout_constraintBottom_toTopOf="@+id/formContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageViewLogo3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/komyu_header_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewLogoHeader"
        app:layout_constraintVertical_bias="0.0">

        <!-- Title -->
        <TextView
            android:id="@+id/CreateNewAccTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:text="Create a New Account"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <!-- Username Field -->

        <TextView
            android:id="@+id/FirstNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:text="First Name"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="20sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editFirstName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_bg_withcorner"
                android:drawableStart="@drawable/username_icon"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:hint="First Name..."
                android:textColor="@color/black"
                android:padding="6dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/LastNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="14dp"
            android:text="Last Name"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="20sp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editLastName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_bg_withcorner"
                android:drawableStart="@drawable/username_icon"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:hint="Last Name..."
                android:textColor="@color/black"
                android:padding="6dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/PhoneNoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="14dp"
            android:text="Phone Number"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="20sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_bg_withcorner"
                android:drawableStart="@drawable/phone_num_icon"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:hint="63+"
                android:textColor="@color/black"
                android:padding="6dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- login redirect -->
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/lightGreenKomyu"
        android:text="NEXT"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtHaveAnAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Already have an account?"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text=" LOGIN"
            android:textColor="@color/darkBlueKomyu"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>